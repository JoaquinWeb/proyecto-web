<odoo>
    <data>
        <!-- explicit list view definition -->
        <record model="ir.ui.view" id="inventarios.bodega_proveedor_kanban">
        <field name="name">Inventarios </field>
        <field name="model">inventarios.bodega_proveedor</field>
        <field name="arch" type="xml">
        <kanban>
                <field name="name"/>
                <field name="image"/>
                <field name="city"/>
                <field name="address"/>
                <field name="first_register"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_kanban_record_has_image_fill inventarios.bodega_proveedor_kanban">
                                <t t-if="record.image.raw_value">
                                    <div class="o_kanban_image_fill_left d-none d-md-block" t-attf-style="background-image:url('#{kanban_image('inventarios.bodega_proveedor', 'image', record.id.raw_value)}')"/>
                                </t>
                                <t t-else="">
                                    <img class="o_kanban_image" alt="Avatar" t-att-src='_s + "/base/static/img/avatar.png"'/>
                                </t>
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                    <div class="o_kanban_tags_section"/>
                                    <ul>
                                        <li>Ciudad : <field name="city"/>
                                        </li>
                                        <li>Direccion : <field name="address"/>
                                        </li>
                                        <li>Fecha : <field name="first_register"/>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

    <record model="ir.actions.act_window" id="inventarios.bodega_proveedor_action_window">
        <field name="name">Proveedores </field>
        <field name="res_model">inventarios.bodega_proveedor</field>
        <field name="view_mode">kanban,tree,form</field>
    </record>

    <record model="ir.actions.server" id="inventarios.bodega_proveedor_action_server">
        <field name="name">Inventarios server</field>
        <field name="model_id" ref="model_inventarios_bodega_proveedor"/>
        <field name="state">code</field>
        <field name="code">
        action = {
            "type": "ir.actions.act_window",
            "view_mode": "kanban,tree,form",
            "res_model": self._name,
        }
        </field>
    </record>
    <menuitem name="lista proveedores" id="inventarios.menu_2_list" parent="inventarios.menu_root"
              action="inventarios.bodega_proveedor_action_window"/>
    </data>
</odoo>